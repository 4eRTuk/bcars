<% provide(:title, "Изменение данных") %>
<% @left = render 'layouts/admin' %>
<% @right = render 'admin_r' %>

<div class="content">
<h1>Изменение комплектации <%= @spec.model.name %></h1>
<%= form_for(@spec) do |f| %>
    <%= render 'err_msg' %>

	<%= f.label :name, "Название" %>
	<%= f.text_field :name %>
	
	<%= f.label :price, "Цена" %>
	<%= f.text_field :price %>
	<br><br>
	<%= f.label :info, "Информация, каждый пункт разделяется \\r\\n" %><br>
	<%= f.text_area :info, class:"h" %>
	
	<%= f.submit "Сохранить данные", class:"c-link red-btn" %>
<% end %>

Двигатели:
<ul><%= render 'engines' %></ul>
</div>