<% provide(:title, "Добавить комплектацию") %>
<% @left = render 'layouts/admin' %>
<% @right = fill_content %>

<div class="content">
<h1>Добавление комплектации <%= @mname %></h1>
<%= form_for(@spec) do |f| %>
    <%= render 'err_msg' %>

	<%= hidden_field_tag :model_id, @spec.model_id %>
	
	<%= f.label :name, "Название" %>
	<%= f.text_field :name %>
	
	<%= f.label :price, "Цена" %>
	<%= f.text_field :price %>
	<br><br>
	<%= f.label :info, "Информация, каждый пункт разделяется \\r\\n" %><br>
	<%= f.text_area :info, class:"h" %>
	
	<%= f.submit "Сохранить данные", class:"c-link red-btn" %>
<% end %>
</div>