<% provide(:title, "Изменение данных") %>
<% @left = render 'layouts/top' %>
<% @right = render 'person' %>

<div class="content">
<h1>Изменение профиля</h1>
<%= form_for(@person) do |f| %>
    <%= render 'layouts/err_msg' %>

	<table border="0" class="total">
	<tr>
	<td>
		<%= f.label :email, "Адрес email" %>
		<%= f.text_field :email %>
	</td>
	<td>
		<%= f.label :firstname, "Имя" %>
		<%= f.text_field :firstname %>
	</td>
	<td>
		<%= f.label :dob, "Дата рождения" %>
		<%= f.date_field :dob %>
	</td>
	</tr>

	<tr>
	<td>
		<%= f.label :password, "Пароль" %>
		<%= f.password_field :password %>
	</td>
	<td>
		<%= f.label :lastname, "Фамилия" %>
		<%= f.text_field :lastname %>
	</td>
	<td>
		<%= f.label :gender, "Пол" %><br>
		<%= f.select :gender, options_for_select([['Мужской', 'м'], ['Женский', 'ж']], 2) %>
	</td>
	</tr>

	<tr>
	<td>
		<%= f.label :password_confirmation, "Подтверждение пароля" %>
		<%= f.password_field :password_confirmation %>
	</td>
	<td>
		<%= f.label :middlename, "Отчество" %>
		<%= f.text_field :middlename %>
	</td>
	<td>
		<%= f.label :phone, "Телефон" %><br>
		<%= f.text_field :phone, maxlength: 11 %>
	</td>
	</tr>	
	</table>
	
	<%= f.submit "Сохранить данные", class:"c-link red-btn" %>
<% end %>
</div>