<% provide(:title, "Изменить услугу") %>
<% @left = render 'layouts/admin' %>
<% @right = fill_content %>

<div class="content">
<h1>Изменение услуги</h1>
<%= form_for(@prep) do |f| %>
    <%= render 'err_msg' %>

	<%= f.label :name, "Название" %>
	<%= f.text_field :name %>
	
	<%= f.label :price, "Цена" %>
	<%= f.text_field :price %>
	<br>
	<%= f.label :type_id, "Тип" %>
	<%= f.select :type_id, options_for_select(@types) %>
	<br><br>
	<%= f.label :info, "Информация, каждый пункт разделяется \\r\\n" %><br>
	<%= f.text_area :info, class:"h" %>
	
	<%= f.submit "Сохранить данные", class:"c-link red-btn" %>
<% end %>
</div>