<% provide(:title, "#{Manufacturer.find(@model.manufacturer_id).name} #{@model.name}") %>

<% @left = render_specs %>
<div class="man-models content"><p class="title"><%= "#{Manufacturer.find(@model.manufacturer_id).name} #{@model.name}" %></p>
<%= image_tag("#{@model.name}.jpg", :border => 0) %>

<section class="tabs">
	<input id="tab_1" type="radio" name="tab" checked="checked" />
	<input id="tab_2" type="radio" name="tab" />
	<input id="tab_3" type="radio" name="tab" />
	
	<label for="tab_1" id="tab_l1"><%= @specs.find(get_spec_id).name %></label>
	<label for="tab_2" id="tab_l2">Опции</label>
	<label for="tab_3" id="tab_l3">Предподготовка</label>
	<div style="clear:both"></div>

	<div class="tabs_cont">
		<div id="tab_c1"><%= render 'specifications/specification' %></div>
		<div id="tab_c2">
		<ul>
			<% @opts.each do |spec| %>
				<li> <%= spec.name %></li>
			<% end %>
		</ul></div>
		<div id="tab_c3">Content of third tab</div>
	</div>	
</section></div>