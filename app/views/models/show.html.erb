<%= javascript_include_tag :models %>
<% provide(:title, "#{@model.manufacturer.name} #{@model.name}") %>

<% @left = render 'left' %>
<% @right = render 'right' %>
<%= hidden_field_tag 'model', @model.id %>
<%= hidden_field_tag 'spec', get_spec_id %>

<div class="content"><p class="title"><%= "#{@model.manufacturer.name} #{@model.name}" %></p>
<%= image_tag("#{@model.name}.jpg", :border => 0) %>
<div class="colors"><%= render 'colors' %></div>

<section class="tabs">
	<input id="tab_1" type="radio" name="tab" checked="checked" />
	<input id="tab_2" type="radio" name="tab" />
	<input id="tab_3" type="radio" name="tab" />
	
	<label for="tab_1" id="tab_l1"><%= @spec.name %></label>
	<label for="tab_2" id="tab_l2">Опции</label>
	<label for="tab_3" id="tab_l3">Предподготовка</label>
	<div style="clear:both"></div>

	<div class="tabs_cont">
		<div id="tab_c1"><%= render 'specifications/specification' %></div>
		<div id="tab_c2"><ul><%= render 'options/option', show: true, opts: @model.options, del: false %></ul></div>
		<div id="tab_c3"><ul><%= render 'preparations/preparation', show: true, del: false, preps: Preparation.all %></ul></div>
	</div>	
</section></div>